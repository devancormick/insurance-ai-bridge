#!/bin/bash

# Pre-commit hook
# This hook runs before each commit to ensure code quality

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${GREEN}Running pre-commit checks...${NC}"

# Get list of staged files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(py|js|ts|tsx|jsx)$' || true)

if [ -z "$STAGED_FILES" ]; then
    echo -e "${YELLOW}No relevant files staged. Skipping checks.${NC}"
    exit 0
fi

# Check Python files
PYTHON_FILES=$(echo "$STAGED_FILES" | grep -E '\.py$' || true)
if [ -n "$PYTHON_FILES" ]; then
    echo -e "${GREEN}Checking Python files...${NC}"
    
    # Check if we're in the backend directory or have backend files
    if [ -d "backend" ] || echo "$PYTHON_FILES" | grep -q "backend/"; then
        cd backend 2>/dev/null || true
        
        # Check if venv exists, if not, skip detailed checks
        if [ -d "venv" ] || command -v python3 &> /dev/null; then
            # Import check
            if command -v python3 &> /dev/null; then
                echo -e "${GREEN}Checking Python syntax...${NC}"
                echo "$PYTHON_FILES" | xargs -r python3 -m py_compile 2>&1 || {
                    echo -e "${RED}Python syntax errors found!${NC}"
                    exit 1
                }
            fi
            
            # Ruff linting (quick check)
            if command -v ruff &> /dev/null; then
                echo -e "${GREEN}Running ruff lint check...${NC}"
                ruff check --select E,F,W $(echo "$PYTHON_FILES" | sed 's|^|backend/|' 2>/dev/null || echo "$PYTHON_FILES") || {
                    echo -e "${YELLOW}Linting issues found. Consider running: ruff check${NC}"
                }
            fi
        fi
        
        cd - 2>/dev/null || true
    fi
fi

# Check TypeScript/JavaScript files
JS_FILES=$(echo "$STAGED_FILES" | grep -E '\.(js|ts|tsx|jsx)$' || true)
if [ -n "$JS_FILES" ]; then
    echo -e "${GREEN}Checking TypeScript/JavaScript files...${NC}"
    
    # Check if we're in the frontend directory or have frontend files
    if [ -d "frontend" ] || echo "$JS_FILES" | grep -q "frontend/"; then
        cd frontend 2>/dev/null || true
        
        if [ -d "node_modules" ]; then
            # ESLint check
            if [ -f "package.json" ] && grep -q '"lint"' package.json; then
                echo -e "${GREEN}Running ESLint check...${NC}"
                npm run lint -- --fix --quiet $(echo "$JS_FILES" | sed 's|^|frontend/|' 2>/dev/null || echo "$JS_FILES") || {
                    echo -e "${YELLOW}Linting issues found. Consider running: npm run lint${NC}"
                }
            fi
        fi
        
        cd - 2>/dev/null || true
    fi
fi

# Check for large files
echo -e "${GREEN}Checking for large files...${NC}"
LARGE_FILES=$(git diff --cached --name-only --diff-filter=ACM | xargs -I {} sh -c 'test $(git diff --cached {} | grep -E "^\+" | wc -c) -gt 500000 && echo {}' || true)
if [ -n "$LARGE_FILES" ]; then
    echo -e "${RED}Warning: Large files detected:${NC}"
    echo "$LARGE_FILES"
    echo -e "${YELLOW}Consider using Git LFS for large files.${NC}"
    read -p "Continue anyway? (y/N): " -n 1 -r
    echo
    if [[ ! $REPLY =~ ^[Yy]$ ]]; then
        exit 1
    fi
fi

# Check for secrets in staged files
echo -e "${GREEN}Checking for potential secrets...${NC}"
SECRET_PATTERNS=(
    "password\s*=\s*['\"][^'\"]+['\"]"
    "secret\s*=\s*['\"][^'\"]+['\"]"
    "api_key\s*=\s*['\"][^'\"]+['\"]"
    "apikey\s*=\s*['\"][^'\"]+['\"]"
    "access_token\s*=\s*['\"][^'\"]+['\"]"
    "private_key\s*=\s*['\"][^'\"]+['\"]"
)

FOUND_SECRETS=false
for pattern in "${SECRET_PATTERNS[@]}"; do
    if git diff --cached | grep -iE "$pattern" | grep -v "test" | grep -v "example" > /dev/null 2>&1; then
        echo -e "${RED}Potential secret detected! Please review:${NC}"
        git diff --cached | grep -iE "$pattern" | head -5
        FOUND_SECRETS=true
    fi
done

if [ "$FOUND_SECRETS" = true ]; then
    echo -e "${YELLOW}Warning: Potential secrets found. Make sure these are not real secrets!${NC}"
    read -p "Continue anyway? (y/N): " -n 1 -r
    echo
    if [[ ! $REPLY =~ ^[Yy]$ ]]; then
        exit 1
    fi
fi

echo -e "${GREEN}Pre-commit checks passed!${NC}"
exit 0

